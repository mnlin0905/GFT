<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--不可点击状态-->
    <item android:state_enabled="false">
        <ripple android:color="@color/function_btn_ripple">
            <item>
                <shape>
                    <solid android:color="@color/function_btn_not_enabled"/>
                    <corners
                        android:radius="@dimen/drawable_shape_normal_radius_5dp"/>
                </shape>
            </item>
        </ripple>
    </item>

    <!--少数状态,一般不使用-->
    <item android:state_activated="true">
        <ripple android:color="@color/function_btn_ripple">
            <item>
                <shape>
                    <solid android:color="@color/function_btn_actived"/>
                    <corners
                        android:radius="@dimen/drawable_shape_normal_radius_5dp"/>
                </shape>
            </item>
        </ripple>
    </item>

    <!--特殊/默认绿色状态-->
    <item>
        <ripple android:color="@color/function_btn_ripple">
            <item>
                <shape>
                    <solid android:color="@color/skin_title_color"/>
                    <corners
                        android:radius="@dimen/drawable_shape_normal_radius_5dp"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>