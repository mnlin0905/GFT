<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_color_9e91fc"
    android:paddingBottom="@dimen/view_padding_margin_20dp"
    android:paddingEnd="@dimen/view_padding_margin_32dp"
    android:paddingStart="@dimen/view_padding_margin_24dp"
    android:paddingTop="@dimen/view_padding_margin_24dp">

    <ImageView
        android:id="@+id/iv_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_conversion_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_padding_margin_10dp"
        android:singleLine="true"
        android:text="@string/fragment_ecology_exchange_center"
        android:textColor="@color/main_color_white"
        android:textSize="@dimen/text_size_title_15sp"
        app:layout_constraintStart_toEndOf="@id/iv_conversion"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/view_padding_margin_24dp"
        android:layout_marginTop="@dimen/view_padding_margin_6dp"
        android:maxLines="2"
        android:text="@string/fragment_ecology_tip"
        android:textColor="@color/main_color_white"
        android:textSize="@dimen/text_size_10sp"
        app:layout_constraintEnd_toStartOf="@id/iv_arrow"
        app:layout_constraintStart_toStartOf="@id/tv_conversion"
        app:layout_constraintTop_toBottomOf="@id/tv_conversion"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow_tip_right_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>