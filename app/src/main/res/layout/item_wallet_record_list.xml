<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rp_main_white_has_border"
    android:paddingBottom="@dimen/view_padding_margin_8dp"
    android:paddingEnd="@dimen/view_padding_margin_24dp"
    android:paddingStart="@dimen/view_padding_margin_24dp"
    android:paddingTop="@dimen/view_padding_margin_8dp">

    <!--交易类型-->
    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/icon_type_gathering"/>

    <!--名称:简称-->
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_padding_margin_12dp"
        android:src="@drawable/default_head_img"
        android:textColor="@color/black_text_171a3f"
        android:textSize="@dimen/text_size_title_15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/iv_type"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="收款"/>

    <!--名称-->
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_padding_margin_4dp"
        android:src="@drawable/default_head_img"
        android:textColor="@color/black_text_9094c2"
        android:textSize="@dimen/text_size_small_12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_type"
        app:layout_constraintTop_toBottomOf="@id/tv_type"
        tools:text="07-24 00:00:00"/>

    <!--金额-->
    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textSize="@dimen/text_size_title_15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="+1.345"/>
</android.support.constraint.ConstraintLayout>