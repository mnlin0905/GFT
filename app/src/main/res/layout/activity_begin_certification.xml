<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin_scaffold_background_color"
    android:orientation="vertical">

    <!---->
    <include layout="@layout/dark_layout_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/view_padding_margin_48dp">

            <!--地区-->
            <com.linktech.gft.skin.MyLineMenuView
                android:id="@+id/lmv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_12dp"
                android:background="@android:color/transparent"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                app:LineMenuView_brief_text_color="@color/skin_accent_color"
                app:LineMenuView_brief_text_size="@dimen/text_size_normal_14sp"
                app:LineMenuView_menu="@string/activity_begin_certification_location"
                app:LineMenuView_menu_text_color="@color/skin_body1_color"
                app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
                app:LineMenuView_navigation="@drawable/icon_arrow_right"
                app:LineMenuView_plugin="text" />

            <com.linktech.gft.view.DividerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_width_1dp"
                android:layout_marginStart="@dimen/view_padding_margin_16dp"
                android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                tools:background="#FFFFFFFF" />

            <com.linktech.gft.view.WatchInputEditText
                android:id="@+id/et_name"
                style="@style/TextViewStandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_12dp"
                android:background="@android:color/transparent"
                android:hint="@string/activity_begin_certification_name"
                android:inputType="text"
                android:maxLength="16"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:textColor="@color/skin_body1_color"
                android:textColorHint="@color/skin_hint_color"
                android:textSize="@dimen/text_size_normal_14sp" />

            <com.linktech.gft.view.DividerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_width_1dp"
                android:layout_marginStart="@dimen/view_padding_margin_16dp"
                android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                tools:background="#FFFFFFFF" />

            <!--证件-->
            <com.linktech.gft.skin.MyLineMenuView
                android:id="@+id/lmv_card_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_12dp"
                android:background="@android:color/transparent"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                app:LineMenuView_brief_text_color="@color/skin_accent_color"
                app:LineMenuView_brief_text_size="@dimen/text_size_normal_14sp"
                app:LineMenuView_menu="@string/activity_begin_certification_card_type"
                app:LineMenuView_menu_text_color="@color/skin_body1_color"
                app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
                app:LineMenuView_navigation="@drawable/icon_arrow_right"
                app:LineMenuView_plugin="text" />

            <com.linktech.gft.view.DividerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_width_1dp"
                android:layout_marginStart="@dimen/view_padding_margin_16dp"
                android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                tools:background="#FFFFFFFF" />

            <com.linktech.gft.view.WatchInputEditText
                android:id="@+id/et_card_number"
                style="@style/TextViewStandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_12dp"
                android:background="@android:color/transparent"
                android:hint="@string/activity_begin_certification_card_number"
                android:inputType="text"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:textColor="@color/skin_body1_color"
                android:textColorHint="@color/skin_hint_color"
                android:textSize="@dimen/text_size_normal_14sp" />

            <com.linktech.gft.view.DividerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_width_1dp"
                android:layout_marginStart="@dimen/view_padding_margin_16dp"
                android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                tools:background="#FFFFFFFF" />

            <!--上传照片-->
            <com.linktech.gft.skin.MyLineMenuView
                android:id="@+id/lmv_upload_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_12dp"
                android:background="@android:color/transparent"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                app:LineMenuView_brief_text_color="@color/skin_accent_color"
                app:LineMenuView_brief_text_size="@dimen/text_size_normal_14sp"
                app:LineMenuView_menu="@string/activity_begin_certification_upload_photo"
                app:LineMenuView_menu_text_color="@color/skin_body1_color"
                app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
                app:LineMenuView_navigation="@drawable/icon_arrow_right"
                app:LineMenuView_plugin="text" />

            <com.linktech.gft.view.DividerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_width_1dp"
                android:layout_marginStart="@dimen/view_padding_margin_16dp"
                android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                tools:background="#FFFFFFFF" />

            <!--手机号-->
            <com.linktech.gft.view.WatchInputEditText
                android:id="@+id/et_phone"
                style="@style/TextViewStandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_12dp"
                android:background="@android:color/transparent"
                android:hint="@string/activity_begin_certification_phone"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingStart="@dimen/view_padding_margin_16dp"
                android:paddingEnd="@dimen/view_padding_margin_16dp"
                android:singleLine="true"
                android:textColor="@color/skin_body1_color"
                android:textColorHint="@color/skin_hint_color"
                android:textSize="@dimen/text_size_normal_14sp" />

            <com.linktech.gft.view.DividerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_width_1dp"
                android:layout_marginStart="@dimen/view_padding_margin_16dp"
                android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                tools:background="#FFFFFFFF" />

            <!--手机验证码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_12dp"
                android:background="@android:color/transparent">

                <com.linktech.gft.view.WatchInputEditText
                    android:id="@+id/et_verify_code"
                    style="@style/TextViewStandard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/activity_begin_certification_verity_code"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    android:textColor="@color/skin_body1_color"
                    android:textColorHint="@color/skin_hint_color"
                    android:textSize="@dimen/text_size_normal_14sp" />

                <com.linktech.gft.view.RandomCodeTextView
                    android:id="@+id/rctv_random_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                    android:textSize="@dimen/text_size_normal_14sp" />
            </LinearLayout>

            <com.linktech.gft.view.DividerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_width_1dp"
                android:layout_marginStart="@dimen/view_padding_margin_16dp"
                android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                android:layout_marginBottom="@dimen/view_padding_margin_42dp"
                tools:background="#FFFFFFFF" />

            <!--按钮-->
            <include layout="@layout/layout_common_dark_function_button" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>