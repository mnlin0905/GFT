<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/view_padding_margin_32dp"
    android:layout_marginEnd="@dimen/view_padding_margin_32dp"
    app:cardBackgroundColor="@color/skin_scaffold_background_color"
    app:cardCornerRadius="@dimen/drawable_shape_normal_radius_5dp"
    app:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/view_padding_margin_20dp"
        android:paddingTop="@dimen/view_padding_margin_20dp"
        android:paddingEnd="@dimen/view_padding_margin_20dp"
        android:paddingBottom="@dimen/view_padding_margin_12dp">

        <!---->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_dialog_label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="行情數據"
                android:textColor="@color/skin_title_color"
                android:textSize="@dimen/text_size_large_18sp" />
            <!--關閉-->
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/view_padding_margin_8dp"
                android:src="@drawable/dark_icon_close_gray" />
        </FrameLayout>
        <!--行數據-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今開"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_open_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_20dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_max_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昨收"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_close_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_20dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最低"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_min_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_12dp"
            android:layout_marginBottom="@dimen/view_padding_margin_12dp"
            android:orientation="horizontal">

            <com.linktech.gft.view.DividerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_20dp"
                android:layout_weight="1" />

            <com.linktech.gft.view.DividerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_20dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52周最高"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_52_max_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_20dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="振幅"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_swing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52周最低"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_52_min_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_20dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="換手"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_52_circulate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_12dp"
            android:layout_marginBottom="@dimen/view_padding_margin_12dp"
            android:orientation="horizontal">

            <com.linktech.gft.view.DividerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_20dp"
                android:layout_weight="1" />

            <com.linktech.gft.view.DividerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_20dp"
                android:layout_weight="1" />
        </LinearLayout>

        <!--third-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成交量"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_success_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_20dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="總市值"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_total_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成交額"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_success_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_20dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每手"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_per_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>
        </LinearLayout>
        <!--fourth-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_12dp"
            android:layout_marginBottom="@dimen/view_padding_margin_12dp"
            android:orientation="horizontal">

            <com.linktech.gft.view.DividerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_20dp"
                android:layout_weight="1" />

            <com.linktech.gft.view.DividerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_20dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="市盈率"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_pe_ratio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_20dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="港股股本"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_floating_stock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="市淨率"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_pb_ratio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_20dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="港股市值"
                    android:textColor="@color/skin_display1_color"
                    android:textSize="@dimen/text_size_small_12sp" />

                <TextView
                    android:id="@+id/tv_dialog_circulation_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="--"
                    android:textSize="@dimen/text_size_small_12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
