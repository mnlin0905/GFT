<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:gravity="center_vertical"
    android:minHeight="48dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:textColor="@color/black_text_993a4254"
        android:textSize="@dimen/text_size_13sp"
        tools:text="2018-12-18 15:25:55" />

    <com.linktech.gft.view.MarqueeTextView
        android:id="@+id/tv_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="@dimen/view_padding_margin_4dp"
        android:paddingEnd="@dimen/view_padding_margin_4dp"
        android:textColor="@color/black_text_3a4254"
        android:textSize="@dimen/text_size_13sp"
        tools:text="0.001" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:paddingStart="@dimen/view_padding_margin_4dp"
        android:paddingEnd="@dimen/view_padding_margin_4dp"
        android:textSize="@dimen/text_size_13sp"
        tools:text="Processing" />

    <TextView
        android:id="@+id/tv_operate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:paddingStart="@dimen/view_padding_margin_4dp"
        android:paddingEnd="@dimen/view_padding_margin_4dp"
        android:textSize="@dimen/text_size_13sp"
        tools:text="Completed" />

    <ImageView
        android:id="@+id/iv_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_padding_margin_4dp"
        android:src="@drawable/icon_arrow_right" />
</LinearLayout>
