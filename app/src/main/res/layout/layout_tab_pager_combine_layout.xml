<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color_white"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        android:paddingStart="@dimen/view_padding_margin_16dp">

        <com.linktech.gft.view.DisallowClickTabLayout
            android:id="@+id/tl_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/toolbar_second_color_primary"
            app:tabIndicatorHeight="@dimen/tab_layout_indicator_height_2dp"
            app:tabMode="scrollable"
            app:tabPaddingBottom="@dimen/view_padding_margin_8dp"
            app:tabPaddingEnd="@dimen/view_padding_margin_16dp"
            app:tabPaddingStart="@dimen/view_padding_margin_16dp"
            app:tabPaddingTop="@dimen/view_padding_margin_8dp"
            app:tabSelectedTextColor="@color/toolbar_second_color_primary"
            app:tabTextAppearance="@style/TextViewTabLayout"
            app:tabTextColor="@color/black_text_454553"/>
    </FrameLayout>

    <com.linktech.gft.view.DividerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_width_1dp"/>

    <com.linktech.gft.view.DisableScrollViewPager
        android:id="@+id/vp_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>