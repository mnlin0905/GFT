<?xml version="1.0" encoding="utf-8"?>
<com.knowledge.mnlin.sdialog.widgets.IncludeDialogViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/skin_scaffold_background_color"
        android:orientation="vertical">
        <!---->
        <include layout="@layout/dark_layout_top_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/view_padding_margin_48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_14dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    android:text="家庭年收入" />

                <RadioGroup
                    android:id="@+id/rg_year_income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_12dp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp">

                    <RadioButton
                        android:id="@+id/rb_year_income_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="＜20萬" />

                    <RadioButton
                        android:id="@+id/rb_year_income_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="20-50萬" />

                    <RadioButton
                        android:id="@+id/rb_year_income_three"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="50-100萬" />

                    <RadioButton
                        android:id="@+id/rb_year_income_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="＞100萬" />
                </RadioGroup>

                <com.linktech.gft.view.DividerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_width_1dp"
                    android:layout_marginStart="@dimen/view_padding_margin_16dp"
                    android:layout_marginTop="@dimen/view_padding_margin_14dp"
                    android:layout_marginEnd="@dimen/view_padding_margin_16dp" />

                <!---->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_20dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    android:text="家庭淨資產" />

                <RadioGroup
                    android:id="@+id/rg_net_assets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_12dp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/view_padding_margin_16dp">

                    <RadioButton
                        android:id="@+id/rb_net_assets_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_4dp"
                        android:singleLine="true"
                        android:text="＜50萬" />

                    <RadioButton
                        android:id="@+id/rb_net_assets_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/view_padding_margin_4dp"
                        android:layout_weight="1"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="50-200萬" />

                    <RadioButton
                        android:id="@+id/rb_net_assets_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/view_padding_margin_4dp"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="200-1000萬" />

                    <RadioButton
                        android:id="@+id/rb_net_assets_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/view_padding_margin_4dp"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:paddingEnd="@dimen/view_padding_margin_16dp"
                        android:singleLine="true"
                        android:text="＞1000萬" />
                </RadioGroup>

                <com.linktech.gft.view.DividerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_width_1dp"
                    android:layout_marginStart="@dimen/view_padding_margin_16dp"
                    android:layout_marginTop="@dimen/view_padding_margin_14dp"
                    android:layout_marginEnd="@dimen/view_padding_margin_16dp" />

                <!--風險承受能力-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_20dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    android:text="風險承受能力" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_12dp"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cb_risk_bearing_one"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:button="@drawable/selector_radio_checked"
                            android:paddingStart="@dimen/view_padding_margin_8dp"
                            android:singleLine="true"
                            android:text="高(30%以上損失)" />

                        <CheckBox
                            android:id="@+id/cb_risk_bearing_two"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:button="@drawable/selector_radio_checked"
                            android:paddingStart="@dimen/view_padding_margin_8dp"
                            android:singleLine="true"
                            android:text="中(20%-30%損失)" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/view_padding_margin_14dp">

                        <CheckBox
                            android:id="@+id/cb_risk_bearing_three"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:button="@drawable/selector_radio_checked"
                            android:paddingStart="@dimen/view_padding_margin_8dp"
                            android:singleLine="true"
                            android:text="低(10%-20%損失)" />

                        <CheckBox
                            android:id="@+id/cb_risk_bearing_four"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:button="@drawable/selector_radio_checked"
                            android:paddingStart="@dimen/view_padding_margin_8dp"
                            android:singleLine="true"
                            android:text="很低(10%以下損失)" />
                    </LinearLayout>
                </LinearLayout>

                <com.linktech.gft.view.DividerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_width_1dp"
                    android:layout_marginStart="@dimen/view_padding_margin_16dp"
                    android:layout_marginTop="@dimen/view_padding_margin_14dp"
                    android:layout_marginEnd="@dimen/view_padding_margin_16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_14dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    android:text="投資目標" />

                <RadioGroup
                    android:id="@+id/rg_investment_objectives"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_12dp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp">

                    <RadioButton
                        android:id="@+id/rb_investment_objectives_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="資本增值" />

                    <RadioButton
                        android:id="@+id/rb_investment_objectives_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/view_padding_margin_4dp"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="股息回報" />

                    <RadioButton
                        android:id="@+id/rb_investment_objectives_three"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/view_padding_margin_4dp"
                        android:layout_weight="1"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="投機" />

                    <RadioButton
                        android:id="@+id/rb_investment_objectives_four"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="對沖" />

                    <RadioButton
                        android:id="@+id/rb_investment_objectives_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="其他" />
                </RadioGroup>

                <com.linktech.gft.view.DividerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_width_1dp"
                    android:layout_marginStart="@dimen/view_padding_margin_16dp"
                    android:layout_marginTop="@dimen/view_padding_margin_14dp"
                    android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                    android:layout_marginBottom="@dimen/view_padding_margin_48dp" />

                <!---->
                <include layout="@layout/layout_common_dark_function_button" />

                <!---->
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/view_padding_margin_20dp"
                    android:drawableStart="@drawable/ic_establish_phone"
                    android:drawablePadding="@dimen/view_padding_margin_10dp"
                    android:text="@string/establish_server_phone"
                    android:textColor="@color/skin_accent_color"
                    android:textSize="@dimen/text_size_normal_14sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</com.knowledge.mnlin.sdialog.widgets.IncludeDialogViewGroup>
