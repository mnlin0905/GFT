<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/view_padding_margin_64dp"
    android:paddingTop="@dimen/view_padding_margin_12dp"
    android:paddingEnd="@dimen/view_padding_margin_16dp"
    android:paddingBottom="@dimen/view_padding_margin_12dp"
    tools:background="@color/main_color_white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="vertical">
        <!--消息-->
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_chat_mine"
            android:gravity="start"
            android:paddingStart="@dimen/view_padding_margin_12dp"
            android:paddingTop="@dimen/view_padding_margin_12dp"
            android:paddingEnd="@dimen/view_padding_margin_20dp"
            android:paddingBottom="@dimen/view_padding_margin_12dp"
            tools:text="--------"
            android:textColor="@color/main_color_white"
            android:textSize="@dimen/text_size_normal_14sp"/>
    </LinearLayout>

    <!--頭像-->
    <ImageView
        android:id="@+id/iv_head_image"
        android:layout_width="@dimen/view_height_36dp"
        android:layout_height="@dimen/view_height_36dp"
        android:src="@drawable/dark_icon_chat_mine"/>
</LinearLayout>
