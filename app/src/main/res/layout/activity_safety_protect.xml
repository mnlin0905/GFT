<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin_scaffold_background_color"
    android:orientation="vertical">

    <!---->
    <include layout="@layout/dark_layout_top_bar" />

    <!--手机-->
    <com.linktech.gft.skin.MyLineMenuView
        android:id="@+id/lmv_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_padding_margin_10dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        app:LineMenuView_brief_text_color="@color/skin_display1_color"
        app:LineMenuView_brief_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_menu="@string/label_begin_certification"
        app:LineMenuView_menu_text_color="@color/skin_body1_color"
        app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_navigation="@drawable/icon_arrow_right"
        app:LineMenuView_plugin="text" />

    <com.linktech.gft.view.DividerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_width_1dp"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_marginEnd="@dimen/view_padding_margin_16dp"
        tools:background="#FFFFFFFF" />

    <!--邮箱-->
    <com.linktech.gft.skin.MyLineMenuView
        android:id="@+id/lmv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_padding_margin_12dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        app:LineMenuView_brief="@string/function_change"
        app:LineMenuView_brief_text_color="@color/skin_body1_color"
        app:LineMenuView_brief_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_menu="@string/activity_soft_setting_login_pwd"
        app:LineMenuView_menu_text_color="@color/skin_body1_color"
        app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_navigation="@drawable/icon_arrow_right"
        app:LineMenuView_plugin="text" />

    <com.linktech.gft.view.DividerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_width_1dp"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_marginEnd="@dimen/view_padding_margin_16dp"
        tools:background="#FFFFFFFF" />

    <!--指纹识别-->
    <com.linktech.gft.skin.MyLineMenuView
        android:id="@+id/lmv_fingerprint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_padding_margin_12dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        tools:LineMenuView_brief="未启用"
        app:LineMenuView_brief_text_color="@color/skin_body1_color"
        app:LineMenuView_brief_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_menu="@string/label_fingerprint_lock"
        app:LineMenuView_menu_text_color="@color/skin_body1_color"
        app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_navigation="@drawable/icon_arrow_right"
        app:LineMenuView_plugin="text" />

    <com.linktech.gft.view.DividerView
        android:id="@+id/dv_fingerprint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_width_1dp"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_marginEnd="@dimen/view_padding_margin_16dp"
        tools:background="#FFFFFFFF" />

    <!--邮箱-->
    <com.linktech.gft.skin.MyLineMenuView
        android:id="@+id/lmv_face"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_padding_margin_12dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:visibility="gone"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        tools:LineMenuView_brief="未启用"
        app:LineMenuView_brief_text_color="@color/skin_body1_color"
        app:LineMenuView_brief_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_for_calculation="on"
        app:LineMenuView_menu="@string/label_face_lock"
        app:LineMenuView_menu_text_color="@color/skin_body1_color"
        app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_navigation="@drawable/icon_arrow_right"
        app:LineMenuView_plugin="text" />

    <com.linktech.gft.view.DividerView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_width_1dp"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_marginEnd="@dimen/view_padding_margin_16dp"
        tools:background="#FFFFFFFF" />

    <!--邮箱-->
    <com.linktech.gft.skin.MyLineMenuView
        android:id="@+id/lmv_gesture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_padding_margin_12dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        tools:LineMenuView_brief="未启用"
        app:LineMenuView_brief_text_color="@color/skin_body1_color"
        app:LineMenuView_brief_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_for_calculation="on"
        app:LineMenuView_menu="@string/label_gesture_lock"
        app:LineMenuView_menu_text_color="@color/skin_body1_color"
        app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_navigation="@drawable/icon_arrow_right"
        app:LineMenuView_plugin="text" />

    <com.linktech.gft.view.DividerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_width_1dp"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_marginEnd="@dimen/view_padding_margin_16dp"
        tools:background="#FFFFFFFF" />
</LinearLayout>