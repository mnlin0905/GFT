<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/view_padding_margin_40dp"
    android:layout_marginEnd="@dimen/view_padding_margin_40dp"
    app:cardBackgroundColor="@color/dark_color_33364c"
    app:cardCornerRadius="@dimen/drawable_shape_normal_radius_6dp"
    app:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/view_padding_margin_32dp"
            android:layout_marginTop="@dimen/view_padding_margin_40dp"
            android:layout_marginEnd="@dimen/view_padding_margin_32dp"
            android:gravity="center"
            android:text="@string/fragment_kill_order_alert_cancel"
            android:textColor="@color/skin_title_color"
            android:textSize="@dimen/text_size_17sp" />

        <!---->
        <com.linktech.gft.view.DividerView
            android:layout_marginTop="@dimen/view_padding_margin_28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@color/dark_dv_color_13151f" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_weight="1"
                android:text="@string/function_cancel"
                android:textSize="@dimen/text_size_title_15sp"
                android:textColor="@color/dark_main_text_8144e5"
                android:gravity="center"
                android:paddingTop="@dimen/view_padding_margin_16dp"
                android:paddingBottom="@dimen/view_padding_margin_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.linktech.gft.view.DividerView
                android:layout_width="@dimen/divider_line_width_1dp"
                android:layout_height="match_parent"
                android:src="@color/dark_dv_color_13151f" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_weight="1"
                android:text="@string/function_confirm"
                android:textSize="@dimen/text_size_title_15sp"
                android:textColor="@color/dark_main_text_8144e5"
                android:gravity="center"
                android:paddingTop="@dimen/view_padding_margin_16dp"
                android:paddingBottom="@dimen/view_padding_margin_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>