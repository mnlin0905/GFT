<?xml version="1.0" encoding="utf-8"?>
<com.knowledge.mnlin.sdialog.widgets.IncludeDialogViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/skin_scaffold_background_color"
        android:orientation="vertical">
        <!---->
        <include layout="@layout/dark_layout_top_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/view_padding_margin_48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_14dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    android:text="請選擇要開通的賬戶" />

                <RadioGroup
                    android:id="@+id/rg_account_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_12dp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp">

                    <RadioButton
                        android:id="@+id/rb_account_type_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="融資賬戶" />

                    <RadioButton
                        android:id="@+id/rb_account_type_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="現金賬戶" />

                </RadioGroup>

                <com.linktech.gft.view.DividerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_width_1dp"
                    android:layout_marginStart="@dimen/view_padding_margin_16dp"
                    android:layout_marginTop="@dimen/view_padding_margin_14dp"
                    android:layout_marginEnd="@dimen/view_padding_margin_16dp" />

                <!--請選擇要開通的市場-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_20dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    android:text="請選擇要開通的市場" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_12dp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp">

                    <CheckBox
                        android:id="@+id/cb_market_type_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/selector_radio_checked"
                        android:checked="true"
                        android:clickable="false"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="港股(必選)" />

                    <CheckBox
                        android:id="@+id/cb_market_type_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="中華通" />

                    <CheckBox
                        android:id="@+id/cb_market_type_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="美股" />
                </LinearLayout>

                <com.linktech.gft.view.DividerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_width_1dp"
                    android:layout_marginStart="@dimen/view_padding_margin_16dp"
                    android:layout_marginTop="@dimen/view_padding_margin_14dp"
                    android:layout_marginEnd="@dimen/view_padding_margin_16dp" />


                <!--是否進行衍生品投資-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_20dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    android:text="是否進行衍生品投資" />

                <RadioGroup
                    android:id="@+id/rg_other_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_12dp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp">

                    <RadioButton
                        android:id="@+id/rb_other_product_yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="是" />

                    <RadioButton
                        android:id="@+id/rb_other_product_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/selector_radio_checked"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:singleLine="true"
                        android:text="否" />

                </RadioGroup>

                <com.linktech.gft.view.DividerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_width_1dp"
                    android:layout_marginStart="@dimen/view_padding_margin_16dp"
                    android:layout_marginTop="@dimen/view_padding_margin_14dp"
                    android:layout_marginEnd="@dimen/view_padding_margin_16dp" />

                <!--复选-->
                <LinearLayout
                    android:id="@+id/ll_hide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp">

                    <CheckBox
                        android:id="@+id/cb_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@drawable/selector_radio_checked"
                        android:minHeight="0dp"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:paddingTop="@dimen/view_padding_margin_14dp"
                        android:paddingBottom="@dimen/view_padding_margin_14dp"
                        android:text="我曾受過有關衍生品的培訓課程" />

                    <com.linktech.gft.view.DividerView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_line_width_1dp" />

                    <CheckBox
                        android:id="@+id/cb_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@drawable/selector_radio_checked"
                        android:minHeight="0dp"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:paddingTop="@dimen/view_padding_margin_14dp"
                        android:paddingBottom="@dimen/view_padding_margin_14dp"
                        android:text="具有與衍生品相關的工作經驗" />

                    <com.linktech.gft.view.DividerView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_line_width_1dp" />

                    <CheckBox
                        android:id="@+id/cb_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@drawable/selector_radio_checked"
                        android:minHeight="0dp"
                        android:paddingStart="@dimen/view_padding_margin_8dp"
                        android:paddingTop="@dimen/view_padding_margin_14dp"
                        android:paddingBottom="@dimen/view_padding_margin_14dp"
                        android:text="在過去三年，至少產生過5次有關衍生品交易" />

                    <com.linktech.gft.view.DividerView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_line_width_1dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/view_padding_margin_10dp"
                        android:gravity="start"
                        android:text="注：至少曾經有過以上三項經驗中的一項，才可以進行衍生品投資"
                        android:textColor="@color/skin_display1_color"
                        android:textSize="@dimen/text_size_small_12sp" />
                </LinearLayout>

                <!---->
                <include
                    layout="@layout/layout_common_dark_function_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_padding_margin_16dp"
                    android:layout_marginTop="@dimen/view_padding_margin_48dp"
                    android:layout_marginEnd="@dimen/view_padding_margin_16dp" />

                <!---->
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/view_padding_margin_20dp"
                    android:drawableStart="@drawable/ic_establish_phone"
                    android:drawablePadding="@dimen/view_padding_margin_10dp"
                    android:text="@string/establish_server_phone"
                    android:textColor="@color/skin_accent_color"
                    android:textSize="@dimen/text_size_normal_14sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</com.knowledge.mnlin.sdialog.widgets.IncludeDialogViewGroup>
