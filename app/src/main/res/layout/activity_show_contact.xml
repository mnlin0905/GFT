<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--头部-->
    <LinearLayout
        android:paddingBottom="@dimen/view_padding_margin_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_second_color_primary"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            layout="@layout/dark_layout_top_bar"/>

        <ImageView
            android:scaleType="center"
            android:id="@+id/iv_image"
            android:layout_width="@dimen/view_height_70dp"
            android:layout_height="@dimen/view_height_70dp"
            android:background="@drawable/shape_bg_circle_transparent_mask"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/view_padding_margin_16dp"
            android:layout_marginStart="@dimen/view_padding_margin_16dp"
            android:layout_marginTop="@dimen/view_padding_margin_8dp"
            android:textColor="@color/main_color_white"
            android:textSize="@dimen/text_size_large_18sp"
            tools:text="Username"/>
    </LinearLayout>

    <!--可滑动部分-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:background="@color/main_color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/view_padding_margin_64dp">
            <!--手机,邮箱-->
            <com.linktech.gft.skin.MyLineMenuView
                android:id="@+id/lmv_phone"
                style="@style/TextViewStandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_8dp"
                app:LineMenuView_brief_text_color="@color/black_text_171a3f"
                app:LineMenuView_brief_text_size="@dimen/text_size_title_15sp"
                app:LineMenuView_menu="@string/common_mobile_number"
                app:LineMenuView_menu_text_color="@color/black_text_993a4254"
                app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
                app:LineMenuView_plugin="text"
                tools:LineMenuView_brief="18667120973"/>

            <com.linktech.gft.skin.MyLineMenuView
                android:id="@+id/lmv_email"
                style="@style/TextViewStandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:LineMenuView_brief_text_color="@color/black_text_171a3f"
                app:LineMenuView_brief_text_size="@dimen/text_size_title_15sp"
                app:LineMenuView_menu="@string/common_email"
                app:LineMenuView_menu_text_color="@color/black_text_993a4254"
                app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
                app:LineMenuView_plugin="text"
                tools:LineMenuView_brief="18667120973"/>

            <!--钱包地址-->
            <com.linktech.gft.skin.MyLineMenuView
                android:id="@+id/lmv_address"
                style="@style/TextViewStandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:LineMenuView_brief="@string/function_copy"
                app:LineMenuView_brief_text_color="@color/toolbar_second_color_primary"
                app:LineMenuView_brief_text_size="@dimen/text_size_title_15sp"
                app:LineMenuView_menu="@string/common_wallet_address"
                app:LineMenuView_menu_text_color="@color/black_text_993a4254"
                app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
                app:LineMenuView_plugin="text"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/view_padding_margin_32dp"
                android:paddingStart="@dimen/view_padding_margin_32dp"
                android:layout_marginTop="@dimen/view_padding_margin_minus_8dp"
                android:gravity="start"
                android:textSize="@dimen/text_size_normal_14sp"
                tools:text="zGep454354i659i76576675676W5zD258207686kjf12QoUpY"/>

            <!--二维码-->
            <ImageView
                tools:visibility="gone"
                android:id="@+id/iv_address_qr"
                android:layout_width="@dimen/view_height_150dp"
                android:layout_height="@dimen/view_height_150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/view_height_40dp"
                tools:src="@color/toolbar_second_color_primary"/>

            <!--备注-->
            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_padding_margin_40dp"
                android:layout_marginEnd="@dimen/view_padding_margin_32dp"
                android:layout_marginStart="@dimen/view_padding_margin_32dp"
                android:layout_marginTop="@dimen/view_padding_margin_8dp"
                android:gravity="center"
                android:textColor="@color/black_text_454553"
                android:textSize="@dimen/text_size_13sp"
                tools:text="备注（没有备注内容不显示"/>

            <!--转账,删除-->
            <include
                android:visibility="gone"
                layout="@layout/layout_common_dark_function_button"/>

            <!--android:layout_marginTop="@dimen/view_padding_margin_16dp"-->
            <TextView
                android:id="@+id/tv_delete"
                style="@style/TextViewStandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                android:layout_marginStart="@dimen/view_padding_margin_16dp"
                android:background="@drawable/selector_function_btn_bg"
                android:gravity="center"
                android:text="@string/function_delete"
                android:textColor="@color/selector_function_text_color"
                android:textSize="@dimen/text_size_16sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>