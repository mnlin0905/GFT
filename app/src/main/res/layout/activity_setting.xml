<?xml version="1.0" encoding="utf-8"?>
<com.knowledge.mnlin.sdialog.widgets.IncludeDialogViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_color_1d2037_f4f4f4"
        android:orientation="vertical">

        <!---->
        <include layout="@layout/dark_layout_top_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="always"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--個人資訊-->
                <com.linktech.gft.skin.MyLineMenuView
                    android:id="@+id/lmv_message_alert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_10dp"
                    android:background="@color/dark_color_272a3f_ffffff"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    app:LineMenuView_brief_text_color="@color/dark_main_text_666986"
                    app:LineMenuView_brief_text_size="@dimen/text_size_13sp"
                    app:LineMenuView_menu="@string/activity_setting_message"
                    app:LineMenuView_menu_text_color="@color/skin_title_color"
                    app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
                    app:LineMenuView_navigation="@drawable/dark_icon_arrow_right"
                    app:LineMenuView_plugin="text" />

                <!---->
                <com.linktech.gft.skin.MyLineMenuView
                    android:id="@+id/lmv_refresh_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_10dp"
                    android:background="@drawable/dark_layer_bg_bottom_divider_1dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    app:LineMenuView_brief_text_color="@color/dark_main_text_666986"
                    app:LineMenuView_brief_text_size="@dimen/text_size_13sp"
                    app:LineMenuView_menu="@string/activity_setting_refresh_rate"
                    app:LineMenuView_menu_text_color="@color/skin_title_color"
                    app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
                    app:LineMenuView_navigation="@drawable/dark_icon_arrow_right"
                    app:LineMenuView_plugin="text"
                    tools:LineMenuView_brief="30秒" />

                <com.linktech.gft.skin.MyLineMenuView
                    android:id="@+id/lmv_safety_lock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_layer_bg_bottom_divider_1dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    tools:LineMenuView_brief="30分鐘"
                    app:LineMenuView_brief_text_color="@color/dark_main_text_666986"
                    app:LineMenuView_brief_text_size="@dimen/text_size_13sp"
                    app:LineMenuView_menu="@string/activity_setting_safety"
                    app:LineMenuView_menu_text_color="@color/skin_title_color"
                    app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
                    app:LineMenuView_navigation="@drawable/dark_icon_arrow_right"
                    app:LineMenuView_plugin="text" />

                <com.linktech.gft.skin.MyLineMenuView
                    android:id="@+id/lmv_clear_cache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_color_272a3f_ffffff"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    app:LineMenuView_brief="0.0 M"
                    app:LineMenuView_brief_text_color="@color/dark_main_text_666986"
                    app:LineMenuView_brief_text_size="@dimen/text_size_13sp"
                    app:LineMenuView_menu="@string/activity_setting_clear"
                    app:LineMenuView_menu_text_color="@color/skin_title_color"
                    app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
                    app:LineMenuView_navigation="@drawable/dark_icon_arrow_right"
                    app:LineMenuView_plugin="text" />

                <!---->
                <com.linktech.gft.skin.MyLineMenuView
                    android:id="@+id/lmv_switch_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_10dp"
                    android:background="@drawable/dark_layer_bg_bottom_divider_1dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    app:LineMenuView_brief_text_color="@color/dark_main_text_666986"
                    app:LineMenuView_brief_text_size="@dimen/text_size_13sp"
                    app:LineMenuView_menu="@string/activity_setting_switch_mode"
                    app:LineMenuView_menu_text_color="@color/skin_title_color"
                    app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
                    app:LineMenuView_navigation="@drawable/dark_icon_arrow_right"
                    app:LineMenuView_plugin="text"
                    tools:LineMenuView_brief="白天模式" />

                <com.linktech.gft.skin.MyLineMenuView
                    android:id="@+id/lmv_switch_locale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_layer_bg_bottom_divider_1dp"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    tools:LineMenuView_brief="中文簡體"
                    app:LineMenuView_brief_text_color="@color/dark_main_text_666986"
                    app:LineMenuView_brief_text_size="@dimen/text_size_13sp"
                    app:LineMenuView_menu_text_color="@color/skin_title_color"
                    app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
                    app:LineMenuView_navigation="@drawable/dark_icon_arrow_right"
                    app:LineMenuView_plugin="text"
                    app:LineMenuView_menu="@string/activity_setting_switch_locale" />

                <com.linktech.gft.skin.MyLineMenuView
                    android:id="@+id/lmv_switch_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_color_272a3f_ffffff"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    tools:LineMenuView_brief="紅漲綠跌"
                    app:LineMenuView_brief_text_color="@color/dark_main_text_666986"
                    app:LineMenuView_brief_text_size="@dimen/text_size_13sp"
                    app:LineMenuView_menu="@string/activity_setting_color"
                    app:LineMenuView_menu_text_color="@color/skin_title_color"
                    app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
                    app:LineMenuView_navigation="@drawable/dark_icon_arrow_right"
                    app:LineMenuView_plugin="text" />

                <!--關於-->
                <com.linktech.gft.skin.MyLineMenuView
                    android:id="@+id/lmv_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_padding_margin_10dp"
                    android:background="@color/dark_color_272a3f_ffffff"
                    android:paddingStart="@dimen/view_padding_margin_16dp"
                    android:paddingEnd="@dimen/view_padding_margin_16dp"
                    app:LineMenuView_brief_text_color="@color/dark_main_text_666986"
                    app:LineMenuView_brief_text_size="@dimen/text_size_13sp"
                    app:LineMenuView_menu="@string/activity_setting_about"
                    app:LineMenuView_menu_text_color="@color/skin_title_color"
                    app:LineMenuView_menu_text_size="@dimen/text_size_title_15sp"
                    app:LineMenuView_navigation="@drawable/dark_icon_arrow_right"
                    app:LineMenuView_plugin="text" />

                <!--退出登陸-->
                <Button
                    android:id="@+id/bt_exit"
                    style="@style/TextViewStandard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/view_padding_margin_10dp"
                    android:layout_marginBottom="@dimen/view_padding_margin_32dp"
                    android:background="@color/dark_color_272a3f_ffffff"
                    android:gravity="center"
                    android:text="@string/activity_setting_exit"
                    android:textAppearance="@style/Widget.AppCompat.Button.Borderless"
                    android:textColor="@color/dark_color_f85d5a"
                    android:textSize="@dimen/text_size_title_15sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</com.knowledge.mnlin.sdialog.widgets.IncludeDialogViewGroup>
