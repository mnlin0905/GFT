<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_transparent_mask"
    android:orientation="vertical"
    android:paddingStart="@dimen/view_padding_margin_16dp"
    android:paddingTop="@dimen/view_padding_margin_32dp"
    android:paddingEnd="@dimen/view_padding_margin_16dp"
    android:paddingBottom="@dimen/view_padding_margin_12dp"
    tools:background="@color/dark_color_272a3f_ffffff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/dialog_action_more_close_label"
            android:textColor="@color/skin_title_color"
            android:textSize="@dimen/text_size_17sp" />

        <ImageView
            android:id="@+id/iv_common_lose"
            android:layout_width="@dimen/view_height_18dp"
            android:layout_height="@dimen/text_size_large_18sp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/skin_icon_close" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_padding_margin_16dp">

        <TextView
            android:id="@+id/tv_common_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/dark_icon_common_news"
            android:drawablePadding="@dimen/view_padding_margin_8dp"
            android:gravity="center"
            android:text="@string/dialog_action_more_close_news"
            android:textColor="@color/skin_title_color"
            android:textSize="@dimen/text_size_13sp" />

        <TextView
            android:id="@+id/tv_common_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/dark_icon_common_search"
            android:drawablePadding="@dimen/view_padding_margin_8dp"
            android:gravity="center"
            android:text="@string/dialog_action_more_close_search"
            android:textColor="@color/skin_title_color"
            android:textSize="@dimen/text_size_13sp" />

        <TextView
            android:id="@+id/tv_common_custom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/dark_icon_common_custom"
            android:drawablePadding="@dimen/view_padding_margin_8dp"
            android:gravity="center"
            android:text="@string/label_feedback"
            android:textColor="@color/skin_title_color"
            android:textSize="@dimen/text_size_13sp" />

        <TextView
            android:id="@+id/tv_common_exchange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/dark_icon_common_exchange"
            android:drawablePadding="@dimen/view_padding_margin_8dp"
            android:gravity="center"
            android:text="@string/dialog_action_more_close_finacing"
            android:textColor="@color/skin_title_color"
            android:textSize="@dimen/text_size_13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_padding_margin_16dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_common_asset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/dark_icon_common_asset"
            android:drawablePadding="@dimen/view_padding_margin_8dp"
            android:gravity="center"
            android:text="@string/dialog_action_more_close_asset"
            android:textColor="@color/skin_title_color"
            android:textSize="@dimen/text_size_13sp" />

        <TextView
            android:id="@+id/tv_common_ecology"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/dark_icon_common_ecology"
            android:drawablePadding="@dimen/view_padding_margin_8dp"
            android:gravity="center"
            android:text="@string/dialog_action_more_close_ecology"
            android:textColor="@color/skin_title_color"
            android:textSize="@dimen/text_size_13sp" />
    </LinearLayout>
</LinearLayout>
