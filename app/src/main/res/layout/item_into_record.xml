<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:minHeight="@dimen/prefer_view_height_48dp"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/view_padding_margin_16dp"
    android:background="@drawable/selector_trans_bottom_divider_1dp"
    android:paddingStart="@dimen/view_padding_margin_16dp">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="start"
        tools:text="创建时间"
        android:textColor="@color/black_text_993a4254"
        android:textSize="@dimen/text_size_13sp"/>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        tools:text="转入数量"
        android:textColor="@color/black_text_3a4254"
        android:textSize="@dimen/text_size_13sp"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        tools:text="状态"
        android:textColor="@color/black_text_171a3f"
        android:textSize="@dimen/text_size_13sp"/>

    <ImageView
        android:layout_marginStart="@dimen/view_padding_margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow_right"/>
</LinearLayout>