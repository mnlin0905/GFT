<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/skin_scaffold_background_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="@dimen/view_padding_margin_32dp"
    android:paddingTop="@dimen/view_padding_margin_16dp"
    android:paddingEnd="@dimen/view_padding_margin_32dp"
    android:paddingBottom="@dimen/view_padding_margin_16dp"
    tools:background="@drawable/shape_bg_mask_radius_5dp">

    <com.cunoraz.gifview.library.GifView
        android:id="@+id/iv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/view_padding_margin_8dp"
        android:textColor="@color/skin_display1_color"
        android:textSize="@dimen/text_size_normal_14sp"
        android:visibility="gone"
        tools:text="loading..."
        tools:visibility="visible" />
</LinearLayout>
