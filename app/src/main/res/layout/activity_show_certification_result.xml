<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin_scaffold_background_color"
    android:orientation="vertical">
    <!---->
    <include layout="@layout/dark_layout_top_bar" />

    <!--header-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.linktech.gft.view.FitSrcImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/bg_certification_fail" />

        <skin.support.widget.SkinCompatTextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/view_padding_margin_16dp"
            android:layout_marginBottom="@dimen/view_padding_margin_40dp"
            tools:drawableTop="@drawable/icon_certification_fail"
            android:drawablePadding="@dimen/view_padding_margin_20dp"
            android:gravity="center"
            android:paddingStart="@dimen/view_padding_margin_16dp"
            android:paddingEnd="@dimen/view_padding_margin_16dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large_18sp"
            tools:text="您的实名认证审核不成功" />
    </FrameLayout>

    <!--姓名-->
    <com.linktech.gft.skin.MyLineMenuView
        android:id="@+id/lmv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_padding_margin_12dp"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        app:LineMenuView_brief_text_color="@color/skin_body1_color"
        app:LineMenuView_brief_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_menu="@string/activity_show_certification_result_menu_name"
        app:LineMenuView_menu_text_color="@color/skin_body1_color"
        app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_plugin="text"
        tools:LineMenuView_brief="**梅" />

    <com.linktech.gft.view.DividerView
        android:layout_width="match_parent"
        tools:background="#FFFFFFFF"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_marginEnd="@dimen/view_padding_margin_16dp"
        android:layout_height="@dimen/divider_line_width_1dp" />

    <!--证件类型-->
    <com.linktech.gft.skin.MyLineMenuView
        android:id="@+id/lmv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        app:LineMenuView_brief_text_color="@color/skin_body1_color"
        app:LineMenuView_brief_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_menu="@string/activity_show_certification_result_type"
        app:LineMenuView_menu_text_color="@color/skin_body1_color"
        app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_plugin="text"
        tools:LineMenuView_brief="身份证" />

    <com.linktech.gft.view.DividerView
        android:layout_width="match_parent"
        tools:background="#FFFFFFFF"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_marginEnd="@dimen/view_padding_margin_16dp"
        android:layout_height="@dimen/divider_line_width_1dp" />

    <!--证件号码-->
    <com.linktech.gft.skin.MyLineMenuView
        android:id="@+id/lmv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        app:LineMenuView_brief_text_color="@color/skin_body1_color"
        app:LineMenuView_brief_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_menu="@string/activity_show_certification_result_number"
        app:LineMenuView_menu_text_color="@color/skin_body1_color"
        app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_plugin="text"
        tools:LineMenuView_brief="1*************4324" />

    <com.linktech.gft.view.DividerView
        android:layout_width="match_parent"
        tools:background="#FFFFFFFF"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_marginEnd="@dimen/view_padding_margin_16dp"
        android:layout_height="@dimen/divider_line_width_1dp" />

    <!--证件信息-->
    <com.linktech.gft.skin.MyLineMenuView
        android:id="@+id/lmv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/view_padding_margin_16dp"
        android:paddingEnd="@dimen/view_padding_margin_16dp"
        app:LineMenuView_brief_text_color="@color/skin_display1_color"
        app:LineMenuView_brief_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_menu="@string/activity_show_certification_result_info"
        app:LineMenuView_menu_text_color="@color/skin_body1_color"
        app:LineMenuView_menu_text_size="@dimen/text_size_normal_14sp"
        app:LineMenuView_plugin="text"
        tools:LineMenuView_brief="查看原因" />

    <com.linktech.gft.view.DividerView
        android:layout_width="match_parent"
        tools:background="#FFFFFFFF"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_marginEnd="@dimen/view_padding_margin_16dp"
        android:layout_height="@dimen/divider_line_width_1dp" />
</LinearLayout>