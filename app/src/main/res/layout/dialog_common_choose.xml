<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/dark_color_33364c_ffffff"
    app:cardCornerRadius="@dimen/drawable_shape_normal_radius_6dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_padding_margin_24dp"
            android:gravity="center"
            android:paddingStart="@dimen/view_padding_margin_16dp"
            android:paddingEnd="@dimen/view_padding_margin_16dp"
            android:textColor="@color/skin_title_color"
            android:textSize="@dimen/text_size_17sp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="刪除提示" />

        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:gravity="left"
            android:textColor="@color/dark_color_ffffff_333333"
            android:textSize="@dimen/text_size_normal_14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="確定刪除HK騰訊控股(00700)的股價提醒資訊嗎？刪除後系統將不會給您發送相關提醒資訊" />

        <View
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="12dp"
            android:background="@color/dark_color_13151f_e9ecf6"
            app:layout_constraintTop_toBottomOf="@id/tv_describe" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv3">

            <TextView
                android:id="@+id/tv_left"
                style="@style/TextViewStandard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/dark_main_text_8144e5"
                android:textSize="15sp"
                android:text="取消" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/dark_color_13151f_e9ecf6" />

            <TextView
                android:id="@+id/tv_right"
                style="@style/TextViewStandard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/dark_main_text_8144e5"
                android:textSize="@dimen/text_size_17sp"
                android:text="確定" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
