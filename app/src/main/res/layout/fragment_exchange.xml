<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_bg_fragment_exchange"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.linktech.gft.skin.MyTitleCenterToolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarTheme_menu_text_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_layer_bg_bottom_divider_1dp"
        android:elevation="@dimen/cardview_default_elevation"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:transitionName="@string/transition_name_toolbar"
        app:contentInsetEnd="@dimen/view_padding_margin_16dp"
        app:contentInsetStart="@dimen/view_padding_margin_16dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_scrollFlags="exitUntilCollapsed|scroll"
        app:popupTheme="@style/PopupThemeLight"
        app:titleMarginStart="0dp"
        app:titleTextColor="@color/skin_title_color">

    </com.linktech.gft.skin.MyTitleCenterToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <!--開戶/登錄-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_40dp"
                android:drawableStart="@drawable/dark_icon_exchange_first"
                android:drawablePadding="@dimen/view_padding_margin_8dp"
                android:gravity="center"
                android:text="@string/fragment_exchange_label_1"
                android:textColor="@color/dark_fragment_exchange_text"
                android:textSize="@dimen/text_size_17sp" />

            <!---->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_40dp"
                android:layout_marginTop="@dimen/view_padding_margin_4dp"
                android:layout_marginEnd="@dimen/view_padding_margin_40dp"
                android:gravity="center"
                android:text="@string/fragment_exchange_label_2"
                android:textColor="@color/dark_main_text_7c7fa2"
                android:textSize="@dimen/text_size_small_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_40dp"
                android:drawableStart="@drawable/dark_icon_exchange_second"
                android:drawablePadding="@dimen/view_padding_margin_8dp"
                android:gravity="center"
                android:text="@string/fragment_exchange_label_3"
                android:textColor="@color/dark_fragment_exchange_text"
                android:textSize="@dimen/text_size_17sp" />

            <!---->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_40dp"
                android:layout_marginTop="@dimen/view_padding_margin_4dp"
                android:layout_marginEnd="@dimen/view_padding_margin_40dp"
                android:gravity="center"
                android:text="@string/fragment_exchange_label_4"
                android:textColor="@color/dark_main_text_7c7fa2"
                android:textSize="@dimen/text_size_small_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_padding_margin_40dp"
                android:drawableStart="@drawable/dark_icon_exchange_third"
                android:drawablePadding="@dimen/view_padding_margin_8dp"
                android:gravity="center"
                android:text="@string/fragment_exchange_label_5"
                android:textColor="@color/dark_fragment_exchange_text"
                android:textSize="@dimen/text_size_17sp" />

            <!---->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_40dp"
                android:layout_marginTop="@dimen/view_padding_margin_4dp"
                android:layout_marginEnd="@dimen/view_padding_margin_40dp"
                android:gravity="center"
                android:text="@string/fragment_exchange_label_6"
                android:textColor="@color/dark_main_text_7c7fa2"
                android:textSize="@dimen/text_size_small_12sp" />

            <!--按鈕功能-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_16dp"
                android:layout_marginTop="@dimen/view_padding_margin_48dp"
                android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                app:cardBackgroundColor="@color/dark_main_text_8144e5"
                app:cardCornerRadius="@dimen/drawable_shape_normal_radius_5dp">

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/view_padding_margin_16dp"
                    android:paddingBottom="@dimen/view_padding_margin_16dp"
                    android:text="@string/fragment_exchange_login"
                    android:textColor="@color/skin_button_text_color"
                    android:textSize="@dimen/text_size_17sp" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_padding_margin_16dp"
                android:layout_marginTop="@dimen/view_padding_margin_20dp"
                android:layout_marginEnd="@dimen/view_padding_margin_16dp"
                android:layout_marginBottom="@dimen/view_padding_margin_48dp"
                android:background="@drawable/dark_shape_purple_radius_5dp"
                android:gravity="center"
                android:paddingTop="@dimen/view_padding_margin_16dp"
                android:paddingBottom="@dimen/view_padding_margin_16dp"
                android:text="@string/fragment_exchange_register"
                android:textColor="@color/dark_color_exchange_register"
                android:textSize="@dimen/text_size_17sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
