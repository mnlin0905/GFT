<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:keep="@layout/activity_export_secret">

    <include layout="@layout/dark_layout_top_bar"/>

    <!--声明提示-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/view_padding_margin_16dp"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_marginTop="@dimen/view_padding_margin_16dp"
        android:background="@drawable/shape_bg_red_border_red_ff0000_radius_5dp"
        android:lineSpacingMultiplier="1.5"
        android:paddingBottom="@dimen/view_padding_margin_16dp"
        android:paddingEnd="@dimen/view_padding_margin_12dp"
        android:paddingStart="@dimen/view_padding_margin_12dp"
        android:paddingTop="@dimen/view_padding_margin_16dp"
        android:text="@string/activity_export_secret_label"
        android:textColor="@color/main_color_red_fe2126"
        android:textSize="@dimen/text_size_normal_14sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/view_padding_margin_48dp"
        android:src="@drawable/icon_safety_blue"/>

    <!--私钥-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_padding_margin_16dp"
        android:layout_marginTop="@dimen/view_padding_margin_40dp"
        android:text="@string/activity_export_secret_secret"
        android:textColor="@color/black_text_99181717"
        android:textSize="@dimen/text_size_title_15sp"/>

    <TextView
        android:id="@+id/tv_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_padding_margin_64dp"
        android:layout_marginEnd="@dimen/view_padding_margin_32dp"
        android:layout_marginStart="@dimen/view_padding_margin_32dp"
        android:layout_marginTop="@dimen/view_padding_margin_12dp"
        android:textColor="@color/black_text_181717"
        android:textSize="@dimen/text_size_title_15sp"
        tools:text="dh23834hdhsi8374hf203jd0dh0dgh23834hdhsi8374hf203jd0dh0dg"/>

    <!---->
    <include layout="@layout/layout_common_dark_function_button"/>
</LinearLayout>