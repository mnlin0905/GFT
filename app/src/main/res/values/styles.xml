    <!--toolBar主题-->

    <!--Popup弹出框的属性值-->
    <style name="PopupThemeHacker">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">true</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:elevation">@dimen/float_menu_elevation_20dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:colorBackground">@color/colorAccentHacker</item>
        <item name="android:windowBackground">@color/colorAccentHacker</item>
        <item name="android:popupBackground">@color/colorAccentHacker</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">0dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/main_color_white</item>
    </style>

    <!--Popup弹出框的属性值(light模式)-->
    <style name="PopupThemeLight">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">true</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">@dimen/view_padding_margin_8dp</item>
        <item name="android:elevation">@dimen/float_menu_elevation_20dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:colorBackground">@color/main_color_white</item>
        <item name="android:windowBackground">@color/main_color_white</item>
        <item name="android:popupBackground">@color/main_color_white</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">0dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/black_text_171a3f</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionOverflowButtonStyle_Light</item>
    </style>

    <style name="ActionOverflowButtonStyle_Light">
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
    </style>

    <!--底部弹出框的style-->
    <style name="ActivityDialogStyle">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!--加载框 显示样式-->
    <style name="ProgressDialogStyle" parent="ActivityDialogStyle">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <!--window框从底部显示的动画-->
    <style name="ActivityBottomViewAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_activity_menu_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_activity_menu_exit</item>
    </style>

    <!--window框中间显示-->
    <style name="ActivityProgressViewAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_activity_center_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_activity_center_exit</item>
    </style>

    <!--指定背景图-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/shape_splash_bg_white</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--SlowLoading-->
    <style name="SlowLoadingTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--以圆形放大进入界面时使用透明主题与背景-->
    <style name="CircleAnimatorTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

