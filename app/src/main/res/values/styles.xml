<resources xmlns:tools="http://schemas.android.com/tools">>
    <!--App主题-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowBackground"></item>-->
        <!--<item name="android:textColorPrimary"></item>-->

        <!--统一 toolbar -> 控件色 -->
        <item name="colorPrimary">@color/toolbar_color_primary</item>
        <item name="colorPrimaryDark">@color/toolbar_color_primary</item>
        <item name="android:textColorPrimary">@color/main_color_white</item>
        <item name="android:colorControlNormal">?colorControlNormal</item>
        <item name="android:navigationBarColor">?android:navigationBarColor</item>
        <item name="colorAccent">@color/main_color_accent</item>


        <!--<item name="android:background">?attr/selectableItemBackgroundBorderless</item>-->
        <item name="android:background">@color/transparent</item>

        <!--菜单文字颜色-->
        <item name="android:textColor">@color/skin_body1_color</item>
        <item name="android:textColorHint">@color/skin_hint_color</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textSize">@dimen/text_size_normal_14sp</item>
        <!--设置透明主题,会导致onstop和onrestart执行出现问题-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/mc_window_background_gray_f5f5fb</item>
        <!--在输入框未获取焦点时,下划线的颜色-->
        <!--<item name="android:colorControlActivated">@color/transparent</item>-->
        <item name="android:colorControlNormal">@color/skin_accent_color</item>
        <item name="android:editTextColor">@color/skin_body1_color</item>
        <!--<item name="android:editTextBackground">@drawable/selector_edit_text_background_hacker
        </item>-->
        <item name="android:popupTheme">@style/PopupThemeHacker</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustPan</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="android:checkboxStyle">@style/CheckBoxCustom</item>
        <item name="radioButtonStyle">@style/CustomRadioButton</item>
        <item name="checkboxStyle">@style/CustomCheckBox</item>
    </style>

    <!--dialog - app 主题-->
    <style name="DialogAppTheme" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <!--自定义radio-button-->
    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/skin_body1_color</item>
        <item name="android:textSize">@dimen/text_size_normal_14sp</item>
        <item name="android:button">@drawable/selector_radio_checked</item>
    </style>

    <!--自定义check-box-->
    <style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/skin_body1_color</item>
        <item name="android:textSize">@dimen/text_size_normal_14sp</item>
        <item name="android:button">@drawable/selector_radio_checked</item>
    </style>

    <!--checkbox风格-->
    <style name="CheckBoxCustom" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_check_box_button</item>
        <item name="android:paddingStart">@dimen/view_padding_margin_4dp</item>
        <item name="android:minHeight">@dimen/view_height_36dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--一般TextView的style-->
    <style name="TextViewStandard">
        <item name="android:minWidth">0dp</item>
        <!--默认不大写-->
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/prefer_view_height_48dp</item>
        <item name="android:drawablePadding">@dimen/view_padding_margin_32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/view_padding_margin_16dp</item>
        <item name="android:paddingEnd">@dimen/view_padding_margin_16dp</item>
        <item name="android:paddingTop">@dimen/view_padding_margin_8dp</item>
        <item name="android:paddingBottom">@dimen/view_padding_margin_8dp</item>
        <item name="android:textColor">@color/black_text_171a3f</item>
        <item name="android:textColorHint">@color/black_text_663a4254</item>
    </style>

    <!--tabLayout中文字风格-->
    <style name="TextViewTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_normal_14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--ImageView的高度最大最小值限定-->

